---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getTagIndex } from '../../lib/tagIndex';

const tags = await getTagIndex();
---

<BaseLayout title="Tags" description="Browse by tag.">
	<h1 class="text-2xl font-bold tracking-tight">Tags</h1>
	<ul class="mt-6 flex flex-wrap gap-2">
		{tags.map((t) => (
			<li>
				<a
					href={`/tags/${t.slug}`}
					class="rounded-md border border-zinc-200 px-2 py-1 text-sm no-underline hover:bg-zinc-50 dark:border-zinc-800 dark:hover:bg-zinc-900"
				>
					{t.label}
					<span class="ml-2 text-xs text-zinc-500 dark:text-zinc-400">{t.count}</span>
				</a>
			</li>
		))}
	</ul>
</BaseLayout>
